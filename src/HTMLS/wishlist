  <main class="page">
    <section class="hero">
      <h1>Your Wishlist</h1>
      <p>Items you “hearted” will appear here.</p>
    </section>

    <section class="panel" id="wishPanel"></section>
  </main>

  <script>
    function readWish(){
      const raw = localStorage.getItem("luxeon_wishlist");
      try { return raw ? JSON.parse(raw) : []; } catch(e){ return []; }
    }
    function writeWish(list){
      localStorage.setItem("luxeon_wishlist", JSON.stringify(list));
    }

    function renderWish(){
      const panel = document.getElementById("wishPanel");
      const list = readWish();

      if (!list.length){
        panel.innerHTML = `
          <div class="empty">
            Your wishlist is empty. Add items by clicking a heart button on Products/Shop pages.
          </div>
          <div class="actions">
            <button class="btn" onclick="location.href='../HTMLS/product.html'">GO TO PRODUCTS</button>
          </div>
        `;
        return;
      }

      panel.innerHTML = `
        <div class="wish-grid">
          ${list.map((it, idx) => `
            <div class="wish-card">
              <h3>${it.name}</h3>
              <p style="opacity:.7">ID: ${it.id}</p>
              <div class="wish-actions">
                <button class="small" onclick="location.href='../HTMLS/shop.html#${it.id}'">SHOP IT</button>
                <button class="small secondary" onclick="removeWish(${idx})">REMOVE</button>
              </div>
            </div>
          `).join("")}
        </div>

        <div class="actions">
          <button class="btn secondary" onclick="clearWish()">CLEAR WISHLIST</button>
        </div>
      `;
    }

    function removeWish(i){
      const list = readWish();
      list.splice(i, 1);
      writeWish(list);
      renderWish();
    }

    function clearWish(){
      localStorage.removeItem("luxeon_wishlist");
      renderWish();
    }

    renderWish();
  </script>
</body>
